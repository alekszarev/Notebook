@using Microsoft.AspNetCore.Identity
@using Notebook.Data.Models
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Notebook.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/siteDark.css" />
    <link rel="stylesheet" href="~/css/Welcome.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Notebook.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/background.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/menu.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/menuLeft.css" asp-append-version="true" />
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-transparent border-bottom box-shadow mb-3">
            <br />
            <div class="container-fluid">

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation" style="text-align:center; border-color:transparent">
                    <center>
                        <h3 style="font-family:'a Agreement Signature';padding-left:50%; margin-bottom:-7%; width:100%; color:white; font-size:27px">ZlatinaManova.com</h3>
                        <p class="scroll-down">
                            <a class="animate" asp-area="" asp-controller="Home" asp-action="Index"></a>
                        </p>
                        <p class="scroll-downLeft">
                            <a class="animate" asp-area="" asp-controller="Home" asp-action="Index"></a>
                        </p>
                    </center>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        if (User.IsInRole("Owner"))
                        {
                            <br />
                            <center>
                                <ul class="navbar-nav flex-grow-1">
                                    <li class="nav-item">
                                        <a class="nav-link" style="color:white; background-color:rgb(0,0,0,0.5); border-radius:55px" asp-area="" asp-controller="Home" asp-action="Calendar">Календар</a>
                                    </li>
                                </ul>
                            </center>
                            <br />
                            <center>
                                <ul class="navbar-nav flex-grow-1">
                                    <li class="nav-item">
                                        <a class="nav-link" style="color:white; background-color:rgb(0,0,0,0.5); border-radius:55px" asp-area="" asp-controller="Home" asp-action="Appointments">Заявки</a>
                                    </li>
                                </ul>
                            </center>
                            <br />
                            <center>
                                <ul class="navbar-nav flex-grow-1">
                                    <li class="nav-item">
                                        <a class="nav-link" style="color:white; background-color:rgb(0,0,0,0.5); border-radius:55px" asp-area="" asp-controller="Home" asp-action="Messages">Съобщения <span style="color:red; font-size:10px">(1)</span></a>
                                    </li>
                                </ul>
                            </center>
                            <br />
                            <ul class="navbar-nav flex-grow-1">
                                <li class="nav-item">
                                </li>
                            </ul>
                        }
                        else
                        {
                            <br />
                            <center>
                                <ul class="navbar-nav flex-grow-1">
                                    <li class="nav-item">
                                        <a class="nav-link" style="color:white; background-color:rgb(0,0,0,0.5); border-radius:55px" asp-area="" asp-controller="Home" asp-action="Calendar">Календар</a>
                                    </li>
                                </ul>
                            </center>
                            <br />
                            <center>
                                <ul class="navbar-nav flex-grow-1">
                                    <li class="nav-item">
                                        <a class="nav-link" style="color:white; background-color:rgb(0,0,0,0.5); border-radius:55px" asp-area="" asp-controller="Home" asp-action="Appointments">Моят час</a>
                                    </li>
                                </ul>
                            </center>
                            <br />
                            <center>
                                <ul class="navbar-nav flex-grow-1">
                                    <li class="nav-item">
                                        <a class="nav-link" style="color:white; background-color:rgb(0,0,0,0.5); border-radius:55px" asp-area="" asp-controller="Home" asp-action="Appointments">Съобщения <span style="color:red; font-size:10px">(1)</span></a>
                                    </li>
                                </ul>
                            </center>
                            <br />
                            <ul class="navbar-nav flex-grow-1">
                                <li class="nav-item">
                                </li>
                            </ul>

                        }
                    }
                    <center>
                        <partial name="_LoginPartial" />
                    </center>

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            <h2 onclick=window.location.replace(`https://localhost:7172/`) style="text-shadow: 1px 1px #000000; height:10px; text-align:center; font-size:59px; font-family:'a Agreement Signature'; color:yellow">
                Gin&Juice  <a style="text-shadow:none; color:green; font-size:10px;">
                    © <script type="text/javascript">document.write( new Date().getFullYear() );</script>
                </a>
            </h2>

            <div class="night">
