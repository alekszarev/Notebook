                <a style="text-decoration: none" href="?month=@Html.Raw(monthNum+1)"></a>
            </div>
        }
        else if (monthNum == 1)
        {
            <h1 style="text-align:center">@ViewData["Title"]<a style="text-decoration: none" href="?month=@Html.Raw(monthNum+1)"> →</a></h1>

        }
        else if (monthNum == 12)
