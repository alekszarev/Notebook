@using Notebook.Data.Models.Calendar
@model Appointment
<head>
    <link href="/css/minimal-tableDark.css" rel="stylesheet" type="text/css">
</head>
<center>
    <table>
        <tr>
            <th>Час</th>
            <th>Дата</th>
            <th>Клиент</th>
            <th>Процедура</th>
            <th>статус</th>
        </tr>
        <tr>
            <td style="background-color:rgb(0,0,0,0.5); font-size:15px; font-weight:600; color:white">@Model.Hour.Clock:00</td>
            <td style="background-color:rgb(0,0,0,0.5); font-size:15px; font-weight:600; color:white">@Model.Hour.Day.Date @Model.Hour.Day.Month.MonthName</td>
            @{
                if (@Model.User != null)
                {
                    <td style="background-color:rgb(0,0,0,0.5); font-size:15px; font-weight:600; color:white">@Model.User.Name</td>
                }
                else
                {
                    <td style="background-color:rgb(0,0,0,0.5); font-size:15px; font-weight:600; color:white">@Model.UserBuffer.Name</td>
                }

            }
            <td style="background-color:rgb(0,0,0,0.5); font-size:15px; font-weight:600; color:white">@Model.Procedure.ProcedureName</td>
            @{

                if (@Model.IsAproved == false)
                {

                    <td style="background-color:rgb(0,0,0,0.5); font-size:15px; font-weight:600; color:yellow">чака</td>
                }
                else
                {
                    <td style="background-color:rgb(0,0,0,0.5); font-size:15px; font-weight:600; color:green">одобрен</td>
                }
            }
        </tr>
    </table>
    <br />
    @{
        if (@Model.IsAproved == false)
        {
            <span onclick=window.location.replace(`https://localhost:7172/owner/confirm?id=${@Model.HourId}`) style="color:black;border-radius:12px; margin-right:20%; background-color:rgb(0,250,4,0.6)">&nbsp;Промени статус&nbsp;</span>
            <span style="color:red;border-radius:12px; background-color:rgb(0,0,4,0.9)">&nbsp;Изтрии заявка&nbsp;</span>
        }
        else
        {
            <span onclick=window.location.replace(`https://localhost:7172/owner/confirm?id=${@Model.HourId}`) style="color:white;border-radius:12px; margin-right:20%; background-color:rgb(0,0,4,0.6)">&nbsp;Промени статус&nbsp;</span>  
            <span style="color:red;border-radius:12px; background-color:rgb(0,0,4,0.9)">&nbsp;Изтрии заявка&nbsp;</span>
        }
    }
</center>